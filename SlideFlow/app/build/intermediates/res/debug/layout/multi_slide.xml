<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:text="Next"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <com.blackstar.math4brain.TextViewUD
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewP1"
            android:layout_gravity="center_horizontal"
            android:text="P1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.blackstar.slideflow.SlideView
            android:id="@+id/slideView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/button" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:progress="100"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <com.blackstar.slideflow.SlideView
            android:id="@+id/slideView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="P2"
            android:id="@+id/textViewP2"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Asus/AndroidstudioProjects/AndroidProjects/SlideFlow/app/src/main/res/layout/multi_slide.xml -->